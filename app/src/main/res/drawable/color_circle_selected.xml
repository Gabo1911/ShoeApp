<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Border -->
    <item>
        <shape android:shape="oval">
            <solid android:color="@android:color/transparent" /> <!-- Transparent fill for the main shape -->
            <stroke android:width="3dp" android:color="@android:color/holo_blue_dark" /> <!-- Border color -->
            <size android:width="48dp" android:height="48dp"/>
        </shape>
    </item>
    <!-- Inner circle (the actual color) -->
    <item android:top="3dp" android:bottom="3dp" android:left="3dp" android:right="3dp">
        <shape android:shape="oval">
            <solid android:color="#CCCCCC" /> <!-- This color will be overridden by backgroundTint in the layout -->
            <size android:width="42dp" android:height="42dp"/>
        </shape>
    </item>
</layer-list>